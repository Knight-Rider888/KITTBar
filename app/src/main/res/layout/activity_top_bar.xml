<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".TopBarActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="背景透明度" />

            <SeekBar
                android:id="@+id/seek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="backIcon"
                android:text="返回键图标" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="backIconPadding"
                android:text="返回键padding" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="backVisible"
                android:text="返回键隐藏显示（随机）" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="custom"
                android:text="填充自定义布局" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="title"
                android:text="更改标题内容 颜色 大小 padding" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="titleDrawable"
                android:text="设置标题右侧图标 与 padding" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="searchLayoutBg"
                android:text="设置搜索背景色 圆角 描边 外边距" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="searchVisible"
                android:text="显示搜索框" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="searchEditBase"
                android:text="设置搜索框 hint 颜色 文字大小" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="right"
                android:text="设置右侧按钮" />

        </LinearLayout>


    </ScrollView>


    <knight.rider.kitt.bar.KittBar
        android:id="@+id/kitt_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        app:bar_background_alpha="0.5"
        app:bar_custom_layout="@layout/custom"
        app:bar_searchEdit_hint="我是提示内容"
        app:bar_searchEdit_hintColor="#00BCD4"
        app:bar_searchEdit_paddingLeft="10dp"
        app:bar_searchEdit_paddingRight="10dp"
        app:bar_searchEdit_support_write_and_clear="bothSupport"
        app:bar_searchEdit_textColor="#9C27B0"
        app:bar_searchEdit_textSize="30dp"
        app:bar_searchLayout_color="@color/design_default_color_primary"
        app:bar_searchLayout_margin="5dp"
        app:bar_searchLayout_radius="12dp"
        app:bar_searchLayout_stoke_color="#8BC34A"
        app:bar_searchLayout_stoke_width="3dp"
        app:bar_title_color="@color/design_default_color_error"
        app:bar_title_content="标题"
        app:bar_title_drawableBottom="@mipmap/dot"
        app:bar_title_drawableLeft="@mipmap/dot"
        app:bar_title_drawablePadding="3dp"
        app:bar_title_drawableRight="@mipmap/dot"
        app:bar_title_drawableTop="@mipmap/dot"
        app:bar_title_paddingLeft="30dp"
        app:bar_title_paddingRight="10dp"
        app:bar_title_textSize="10dp" />

</FrameLayout>